page {
  height: 100%;
}

.list-item {
  width: 100%;
  overflow: hidden;
  box-sizing: border-box;
  padding: 0 20rpx;
}

.movie-item {
  width: 48%;
  margin: 1%; 
  float: left;
}

.movie-item .poster {
  width: 100%;
}

.movie-item .title {
  font-size: 28rpx;
  text-align: center;
  color: #333;
  margin: 5rpx 0;
}

.movie-item .title .rate {
  color: #f00;
  margin-left: 5rpx;
}

.movie-item .info {
  text-align: center;
  color: #888;
  font-size: 24rpx;
}

.loading{
  text-align: center;
  height: 80rpx;
  padding: 20rpx;
}

.loading image{
  width: 100%;
  height: 100%;
}